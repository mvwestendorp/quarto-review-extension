{
  "name": "quarto-review-extension",
  "version": "0.1.0",
  "description": "Quarto extension for collaborative document review with in-browser editing",
  "type": "module",
  "main": "dist/review.js",
  "types": "dist/types/main.d.ts",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run type-check && vite build && npm run docs && npm run build:css",
    "build:css": "NODE_ENV=production node scripts/build-css.js",
    "build:css:dev": "NODE_ENV=development node scripts/build-css.js",
    "postbuild": "node scripts/copy-assets.js",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "python3 -m http.server 8080 --directory docs/generated/api",
    "docs:open": "npm run docs && npm run docs:serve",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:check": "vitest --coverage --run",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "quality:check": "npm run quality:complexity && npm run security:check",
    "quality:complexity": "node scripts/check-complexity.js",
    "quality:report": "node scripts/quality-report.js",
    "security:check": "npm audit --audit-level=high",
    "security:report": "npm audit --json > audit-report.json || true",
    "size:check": "size-limit",
    "prepare": "husky install"
  },
  "keywords": [
    "quarto",
    "extension",
    "review",
    "collaboration",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/diff": "^7.0.2",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/ui": "^3.2.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "^9.0.11",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "prettier": "^3.2.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "size-limit": "^11.0.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "@milkdown/core": "^7.5.0",
    "@milkdown/kit": "^7.5.0",
    "@milkdown/plugin-listener": "^7.5.0",
    "@milkdown/preset-commonmark": "^7.5.0",
    "@milkdown/preset-gfm": "^7.5.0",
    "@milkdown/theme-nord": "^7.5.0",
    "diff": "^8.0.2",
    "isomorphic-git": "^1.25.3",
    "mdast-util-to-string": "^4.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/review.js",
      "limit": "500 KB",
      "webpack": true
    }
  ]
}

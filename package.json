{
  "name": "quarto-review-extension",
  "version": "0.1.0",
  "description": "Quarto extension for collaborative document review with in-browser editing",
  "type": "module",
  "main": "dist/review.js",
  "types": "dist/types/main.d.ts",
  "scripts": {
    "dev": "vite build --watch",
    "prebuild": "node scripts/inject-build-info.js",
    "build": "npm run type-check && (vite build & npm run docs & npm run build:css & wait) && npm run postbuild",
    "build:css": "NODE_ENV=production node scripts/build-css.js",
    "build:css:dev": "NODE_ENV=development node scripts/build-css.js",
    "postbuild": "node scripts/copy-assets.js",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:check": "vitest --coverage --run",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest watch tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:integration:watch": "vitest watch tests/integration",
    "test:lua": "bash tests/lua/run-all.sh",
    "test:e2e": "bash scripts/run-e2e.sh",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:parity": "vitest run tests/integration/pandoc-parity.test.ts",
    "test:parity:watch": "vitest watch tests/integration/pandoc-parity.test.ts",
    "fixtures:generate": "bash tests/fixtures/generate-fixtures.sh",
    "serve:e2e": "node scripts/serve-example.mjs",
    "benchmark": "vitest run tests/benchmarks --reporter=verbose",
    "benchmark:translation": "vitest run tests/benchmarks/translation-performance.bench.ts --reporter=verbose",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "quality:check": "npm run quality:complexity && npm run security:check",
    "quality:complexity": "node scripts/check-complexity.js",
    "quality:report": "node scripts/quality-report.js",
    "security:check": "npm audit --audit-level=high",
    "security:report": "npm audit --json > audit-report.json || true",
    "size:check": "size-limit",
    "prepare": "husky install",
    "package:extension": "bash scripts/package-extension.sh"
  },
  "keywords": [
    "quarto",
    "extension",
    "review",
    "collaboration",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/adm-zip": "^0.5.7",
    "@types/diff": "^7.0.2",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.0.3",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.7.4",
    "rehype-katex": "^7.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "size-limit": "^11.2.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@milkdown/core": "^7.5.0",
    "@milkdown/kit": "^7.17.1",
    "@milkdown/plugin-listener": "^7.5.0",
    "@milkdown/preset-commonmark": "^7.5.0",
    "@milkdown/preset-gfm": "^7.5.0",
    "@milkdown/theme-nord": "^7.17.1",
    "@xenova/transformers": "^2.17.2",
    "diff": "^8.0.2",
    "isomorphic-git": "^1.34.2",
    "mdast-util-to-string": "^4.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/review.js",
      "limit": "500 KB",
      "webpack": true
    }
  ]
}
